{
    "version": "1.0",
    "configurations": [
        {
            "name": "Haplotype vcf",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/pyngs/scripts/haplotype_vcf.py",
            "args": [
                "--vcf", "${workspaceRoot}/test_data/vcf/all_variants.vcf.gz",
                "--output", "${workspaceRoot}/test_data/vcf/all_variants.haplo2.vcf.gz",
                "--relations", "${workspaceRoot}/test_data/vcf/trios.txt"
            ],
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal",
        },
        {
            "name": "Extract haplotypes",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/pyngs/scripts/extract_haplotypes.py",
            "args": [
                "--vcf", "${workspaceRoot}/test_data/vcf/all_variants.haplo2.vcf.gz",
                "--output", "${workspaceRoot}/test_data/vcf/haplotypes.tsv.gz"
            ],
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal",
        },
        {
            "name": "Run umi-consensus",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/bin/pyngs_tools",
            "args": [
                "umi-consensus",
                "--tag", "um",
                "--distance", "1024",
                "--sam", "${workspaceRoot}/test_data/sam/I19-1012-19.um.sam.gz",
                "--output", "${workspaceRoot}/test_data/consensus/I19-1012-19.consensus.sam.gz"
            ],
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH":"${workspaceRoot}"
            }
        },
        {
            "name": "Run samtag filter",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/bin/pyngs_tools",
            "args": [
                "filter-by-samtag",
                "--tag", "rd",
                "--type", "greater",
                "--value", "5",
                "--discard-absent", "True",
                "--sam", "${workspaceRoot}/test_data/consensus/I19-1012-19.consensus.sam.gz",
                "--output", "${workspaceRoot}/test_data/consensus/I19-1012-19.consfilter.sam.gz"
            ],
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH":"${workspaceRoot}"
            }
        },
        {
            "name": "Run merge bed",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/bin/pyngs_tools",
            "args": [
                "merge-bed-entries",
                "--tag", "READNAME",
                "--input", "${workspaceRoot}/test_data/bed/I19-1022-09.rg.operation.bed",
                "--output", "${workspaceRoot}/test_data/bed/I19-1022-09.rg.fragments.bed"
            ],
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH":"${workspaceRoot}"
            }
        },
        {
            "name": "Run consensus test",
            "type": "python",
            "request": "launch",
            "stopOnEntry": true,
            "program": "${workspaceRoot}/pyngs/sam/test_consensus.py",
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal"
        }
    ]
}
