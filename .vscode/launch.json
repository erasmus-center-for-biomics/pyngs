{
    "version": "1.0",
    "configurations": [

        {
            "name": "remove_undetected_alt",
            "type": "python",
            "request": "launch",
            "stopOnEntry": true,
            "program": "${workspaceRoot}/pyngs/scripts/vcf/remove_undetected_alt.py",
            "args": [
                "--input", "${workspaceRoot}/data/mpileup/mpl.vcf",
                "--output", "${workspaceRoot}/data/mpileup/out.vcf",
                "--ploidy", "2"
            ],
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH":"${workspaceRoot}"
            }
        }
    ]
}
