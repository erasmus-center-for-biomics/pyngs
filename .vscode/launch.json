{
    "version": "1.0",
    "configurations": [
        {
            "name": "Run tests",
            "type": "python",
            "pythonPath":"${config:python.pythonPath}",
            "request": "launch",
            "stopOnEntry": true,
            "externalConsole":false,
            "args": [],
            "program": "${workspaceRoot}/tests/__init__.py",
            "cwd": "${workspaceRoot}",
            "env": {
                "PYTHONPATH": "${workspaceRoot}"
            },
            "debugOptions": [
                "WaitOnAbnormalExit",
                "WaitOnNormalExit",
                "RedirectOutput"
            ]
        },
        {
            "name": "AddUMI",
            "type": "python",
            "pythonPath":"${config:python.pythonPath}",
            "request": "launch",
            "stopOnEntry": true,
            "externalConsole":false,
            "args": [
                "--fastq", "data/test_R1_001.fastq.gz",
                "--umi", "data/test_I2_001.fastq.gz",
                "--output", "data/test_R1_001.umi.fastq.gz"
                ],
            "program": "${workspaceRoot}/scripts/add_umi_to_readname.py",
            "cwd": "${workspaceRoot}",
            "env": {
                "PYTHONPATH": "${workspaceRoot}"
            },
            "debugOptions": [
                "WaitOnAbnormalExit",
                "WaitOnNormalExit",
                "RedirectOutput"
            ]
        }
    ]    
}
