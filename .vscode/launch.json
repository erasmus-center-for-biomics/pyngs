{
    "version": "1.0",
    "configurations": [
        {
            "name": "Run tests",
            "type": "python",
            "pythonPath":"${config:python.pythonPath}",
            "request": "launch",
            "stopOnEntry": true,
            "externalConsole":false,
            "args": [],
            "program": "${workspaceRoot}/tests/__init__.py",
            "cwd": "${workspaceRoot}",
            "env": {
                "PYTHONPATH": "${workspaceRoot}"
            },
            "debugOptions": [
                "WaitOnAbnormalExit",
                "WaitOnNormalExit",
                "RedirectOutput"
            ]
        },
        {
            "name": "AddUMI",
            "type": "python",
            "pythonPath":"${config:python.pythonPath}",
            "request": "launch",
            "stopOnEntry": true,
            "externalConsole":false,
            "args": [
                "--fastq", "data/test_R1_001.fastq.gz",
                "--umi", "data/test_I2_001.fastq.gz",
                "--output", "data/test_R1_001.umi.fastq.gz"
                ],
            "program": "${workspaceRoot}/scripts/add_umi_to_readname.py",
            "cwd": "${workspaceRoot}",
            "env": {
                "PYTHONPATH": "${workspaceRoot}"
            },
            "debugOptions": [
                "WaitOnAbnormalExit",
                "WaitOnNormalExit",
                "RedirectOutput"
            ]
        },
        {
            "name": "Consensus",
            "type": "python",
            "pythonPath":"${config:python.pythonPath}",
            "request": "launch",
            "stopOnEntry": true,
            "externalConsole":false,
            "args": [
                "--sam", "data/I18-1196-01.tag.sam",
                "--tag", "um",
                "--output", "data/I18-1196-01.consensus.sam"
                ],
            "program": "${workspaceRoot}/scripts/umi_consensus.py",
            "cwd": "${workspaceRoot}",
            "env": {
                "PYTHONPATH": "${workspaceRoot}"
            },
            "debugOptions": [
                "WaitOnAbnormalExit",
                "WaitOnNormalExit",
                "RedirectOutput"
            ]
        },
        {
            "name": "Assign",
            "type": "python",
            "pythonPath":"${config:python.pythonPath}",
            "request": "launch",
            "stopOnEntry": true,
            "externalConsole":false,
            "args": [
                "--file", "data/test_R1.fastq", "data/test_R2.fastq",
                "--read", "0",
                "--start", "0", 
                "--end", "12",
                "--prefix", "data/demux/",
                "--suffix", "_R1.fastq", "_R2.fastq",
                "--remove", "True"
                ],
            "program": "${workspaceRoot}/scripts/demultiplex.py",
            "cwd": "${workspaceRoot}",
            "env": {
                "PYTHONPATH": "${workspaceRoot}"
            },
            "debugOptions": [
                "WaitOnAbnormalExit",
                "WaitOnNormalExit",
                "RedirectOutput"
            ]
        }
    ]    
}
